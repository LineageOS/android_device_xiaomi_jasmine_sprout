# Inherit from wayne-common
include device/xiaomi/wayne-common/BoardConfigCommon.mk

DEVICE_PATH := device/xiaomi/jasmine_sprout

# A/B
BOARD_BUILD_SYSTEM_ROOT_IMAGE := true
